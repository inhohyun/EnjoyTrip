<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.mapper.attraction.AttractionMapper">

	<resultMap id="AttractionResultMap"
		type="com.ssafy.model.attraction.AttractionInfo">
		<id column="content_id" property="id" />
		<result column="content_type_id" property="contentTypeId" />
		<result column="title" property="title" />
		<result column="addr1" property="addr1" />
		<result column="addr2" property="addr2" />
		<result column="zipcode" property="zipcode" />
		<result column="tel" property="tel" />
		<result column="first_image" property="firstImage" />
		<result column="first_image2" property="firstImage2" />
		<result column="readcount" property="readCount" />
		<result column="latitude" property="latitude" />
		<result column="longitude" property="longitude" />
		<result column="mlevel" property="mlevel" />

		<association property="sido"
			javaType="com.ssafy.model.attraction.Sido">
			<result column="sido_code" property="code" />
			<result column="sido_name" property="name" />
		</association>

		<association property="gugun"
		
			javaType="com.ssafy.model.attraction.Gugun">
			<result column="gugun_code" property="code" />
			<result column="gugun_name" property="name" />

			<association property="sido"
				javaType="com.ssafy.model.attraction.Sido">
				<result column="sido_code" property="code" />
				<result column="sido_name" property="name" />
			</association>
		</association>
	</resultMap>

	<select id="getAttractionsByLocation"
		resultMap="AttractionResultMap">
		SELECT *
		FROM attraction_info a
		JOIN sido s ON a.sido_code = s.sido_code
		JOIN gugun g ON g.gugun_code = a.gugun_code
		<where>
			a.content_type_id = #{contentTypeId}
			<if test="sidoName != null and sidoName != ''">
				AND s.sido_name = #{sidoName}
			</if>
			<if test="gugunName != null and sidoName != ''">
				AND g.gugun_name = #{gugunName}
			</if>
		</where>
	</select>
</mapper>